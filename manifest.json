{
    "manifest_version": 3,
    "name": "Nextcloud News Counter",
    "description": "Display a counter for your unread news.",
    "version": "1.0",
    "options_page": "options.html",
    "permissions": ["storage"],
    "action": {
        "default_icon": {
            "16": "/images/icon16.png",
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    }
}